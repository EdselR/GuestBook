<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/narindo_bg">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="600dip"
        android:layout_height="250dip"
        android:layout_alignTop="@+id/backImageThree"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="1100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/opensans_light"
        android:text="Please re-enter your sign-in details"
        android:textAlignment="center"
        android:textSize="32sp" />


    <EditText
        android:id="@+id/name2"
        android:layout_width="800dip"
        android:layout_height="80dip"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_black_button"
        android:ems="10"
        android:fontFamily="@font/opensans_italic"
        android:hint="@string/nameLabel"
        android:inputType="textPersonName"
        android:paddingBottom="20dip"
        android:paddingEnd="80dip"
        android:paddingStart="80dip"
        android:paddingTop="20dp"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/email2"
        android:layout_width="800dip"
        android:layout_height="80dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="347dp"
        android:background="@drawable/rounded_black_button"
        android:ems="10"
        android:fontFamily="@font/opensans_italic"
        android:hint="@string/emailLabel"
        android:inputType="textEmailAddress"
        android:paddingBottom="20dip"
        android:paddingEnd="80dip"
        android:paddingStart="80dip"
        android:paddingTop="20dp"
        android:textSize="32sp" />

    <Button
        android:id="@+id/signOut2"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="134dp"
        android:background="@drawable/rounded_blackbutton"
        android:fontFamily="@font/opensans_light"
        android:onClick="signOut"
        android:text="Sign Out"
        android:textColor="@color/kiosonWhite"
        android:textSize="30sp" />

    <Button
        android:id="@+id/backImageThree"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/back"
        android:elevation="10dp"/>

    <TextView
        android:layout_width="116dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/backImageThree"
        android:layout_toEndOf="@+id/backImageThree"
        android:fontFamily="@font/opensans_bold"
        android:text="Back"
        android:textAlignment="center"
        android:textSize="38sp" />

</RelativeLayout>